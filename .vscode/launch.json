    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'mophing'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=mophing"
                ],
                "filter": {
                    "name": "mophing",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'mophing'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mophing",
                    "--package=mophing"
                ],
                "filter": {
                    "name": "mophing",
                    "kind": "bin"
                }
            },
            "args": [
                "data/Tetra_linspace.vtu", // 1: output
                "2.345e-3", // 2: r0
                "2.850e-3", // 3: r1
                "0.93e-3",  // 4: h0
                "2.10e-3",  // 5: h1
                "0.10e-3",  // 6: bevel
                "0.825e-3", // 7: pocket_r
                "1.70e-3",  // 8: neck_x
                "1.20e-3",  // 9: neck_r
                "2.45e-3",  // 10: neck_h
                "0.152e-3", // 11: neck_dh
                "10",       // 12: iteration
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}